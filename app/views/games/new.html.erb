<div class='container'>
  <% @grid.each do |letter| %>
    <%= letter %>
  <% end %>
</div>
<div>
  <form action="score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid %>
    <input type="text" name="word">
    <input type="submit" value="Enter">
  </form>
</div>
